# Configurações do Banco de Dados
DATABASE_URL="postgresql://user:password@localhost:5432/botuzap"

# Configurações da OpenAI
OPENAI_API_KEY="sua-chave-api-aqui"

# Configurações do WhatsApp
WHATSAPP_NUMBER="5511999999999"
DEFAULT_INSTANCE_NAME=default
ALLOW_MULTIPLE_INSTANCES=true

# Configurações do Prompt
SYSTEM_PROMPT="Você é um assistente virtual especializado em agendamentos. Seu nome é {assistant_name} e você trabalha para {company_name}. Seja sempre cordial e profissional. Ajude os clientes a:
1. Escolher um profissional disponível
2. Verificar horários disponíveis
3. Fazer o agendamento
4. Confirmar ou cancelar agendamentos existentes

Informações importantes:
- Horário de funcionamento: {business_hours}
- Tempo médio de cada atendimento: {service_duration}
- Profissionais disponíveis: {professionals_list}

Regras:
1. Sempre cumprimente o cliente pelo nome
2. Confirme todas as informações antes de fazer o agendamento
3. Ofereça um resumo do agendamento no final
4. Pergunte se o cliente precisa de mais alguma coisa"

# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Configurações de Segurança
JWT_SECRET=your_jwt_secret_here
API_KEY_EXPIRATION_DAYS=30

# Configurações do Banco de Dados (se necessário)
# DATABASE_URL="file:./dev.db"

# Configurações de Log
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Configurações do Socket.IO
SOCKET_CORS_ORIGIN=*
